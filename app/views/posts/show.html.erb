<p>
  <strong>User:</strong>
  <%= @post.user.name %>
</p>

<p>
  <%= @post.created_at %>
  <%= @post.body %>
</p>

 <% if @post.user == current_user %>
  <%= link_to 'Edit post', edit_post_path(@post) %> |
  <%= link_to 'Delete post', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<%= link_to 'Back to profile', @post.user.profile %>
