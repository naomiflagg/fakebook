<%= render partial: 'shared/profile', locals: { user: @user, profile: @user.profile } %>

<%= render partial: 'shared/users_list', locals: { users: User.where(id: @user.id) } %>

<%= render partial: 'shared/posts', locals: { posts: @posts } %>

<% if @user == current_user %>
  <%= link_to 'Create new post', new_post_path %>
<% end %>