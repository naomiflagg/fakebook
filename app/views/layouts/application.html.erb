<!DOCTYPE html>
<html>
  <head>
    <title>Fakebook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |type, msg| %>
      <%= msg %>
    <% end %>

    <nav>
    <ul>
      <% if user_signed_in? %>
        <li>Signed in as <%= current_user.name %>. Not you?</li>
        <li><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
        <%= link_to 'Home', root_path unless current_page?(root_path) %>
        <% unless current_user.frienders.empty? %>
          <li><%= render partial: 'shared/users_list', locals: { users: current_user.frienders } %>
        <% end %>
      <% end %>
    </ul>
    </nav>

    <%= yield %>
  </body>
</html>
